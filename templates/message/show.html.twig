{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}


{% block body %}
    
    <h1>Message</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Objet</th>
                <td>{{ message.object }}</td>
            </tr>
            <tr>
                <th>Contenue</th>
                <td>{{ message.content }}</td>
            </tr>
            <tr>
                <th>Créer le</th>
                <td>{{ message.createdAt ? message.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Expediteur</th>
                <td>{{ message.expeditor }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_message_index') }}">Retour à la liste</a>

    {{ include('message/_delete_form.html.twig') }}
{% endblock %}
