{% extends 'base.html.twig' %}

{% block title %}Gestion Etudiants{% endblock %}
{% block pagetitle %}Gestion Etudiants{% endblock %}
{% block navmenu %}
  <a href="{{ path('home') }}">Retour au menu principal</a>
{% endblock %}
{% block body %}
    <h1>Student index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>BirthDay</th>
                <th>Promo</th>
                <th>Photo</th>
                <th>Company</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.firstName }}</td>
                <td>{{ student.lastName }}</td>
                <td>{{ student.birthDay ? student.birthDay|date('d-m-Y') : '' }}</td>
                <td>{{ student.promo }}</td>
                <td>
                    {% if student.photo %}
                        <img src="{{ asset('uploads/photos/' ~ student.photo) }}" alt="Photo de {{ student.lastName }}" style="max-width: 200px;">
                    {% else %}
                        Pas de photo disponible
                    {% endif %}
                </td>
                <td>{{ student.company }}</td>
                <td>{{ student.description }}</td>
                <td>{{ student.createdAt ? student.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ student.updatedAt ? student.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_student_show', {'id': student.id}) }}">show</a>
                    <a href="{{ path('app_student_edit', {'id': student.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_student_new') }}">Create new</a>
{% endblock %}
