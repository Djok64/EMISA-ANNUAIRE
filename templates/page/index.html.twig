{% extends 'base.html.twig' %}

{% block title %}Gestion des pages{% endblock %}

{% block body %}
    <h1>Gestion des pages</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Active</th>
                <th>MetaTitle</th>
                <th>MetaDescription</th>
                <th>Créer le</th>
                <th>Mis à jour le</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.title }}</td>
                <td>{{ page.content }}</td>
                <td>{{ page.active ? 'Yes' : 'No' }}</td>
                <td>{{ page.metaTitle }}</td>
                <td>{{ page.metaDescription }}</td>
                <td>{{ page.createdAt ? page.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ page.updatedAt ? page.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_page_show', {'id': page.id}) }}">Voir</a>
                    <a href="{{ path('app_page_edit', {'id': page.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucune page trouvé...</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_page_new') }}">Créer nouvelle</a>
{% endblock %}
