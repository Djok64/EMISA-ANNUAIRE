{% extends 'base.html.twig' %}

{% block title %}Page{% endblock %}

{% block body %}
    <h1>Page</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ page.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ page.content }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ page.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>MetaTitle</th>
                <td>{{ page.metaTitle }}</td>
            </tr>
            <tr>
                <th>MetaDescription</th>
                <td>{{ page.metaDescription }}</td>
            </tr>
            <tr>
                <th>Créer le</th>
                <td>{{ page.createdAt ? page.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mis à jour le </th>
                <td>{{ page.updatedAt ? page.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_page_index') }}">Retour à la liste</a>

    <a href="{{ path('app_page_edit', {'id': page.id}) }}">Modifier</a>

    {{ include('page/_delete_form.html.twig') }}
{% endblock %}
